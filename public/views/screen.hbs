<meta property="og:title" content="{{screen.title}} | PasteUrScreens.tk - Paste and share your screenshot in one click !" />
<meta property="og:type" content="website" />
<meta property="og:image" content="https://pasteurscreens.tk/public/{{src}}" />

<div class="container-fluid" style="margin-top:40px; padding: 30px;">
    <h3 class="text-center">{{screen.title}} - {{screen.views}} views.</h3>
    <div class="text-center" style="padding:15px;">
        <img src="{{src}}" alt="Screenshot hosted on pasturscreens.tk" style="box-shadow: 7px 4px 20px 10px #aaa">
    </div>
</div>